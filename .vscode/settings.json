{
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "cmake.cmakePath": "/opt/homebrew/bin/cmake",
    "cmake.configureSettings": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
    },
    "testMate.cpp.test.advancedExecutables": [
        {
            "pattern": "{build,Build,BUILD,out,Out,OUT}/**/*{test,Test,TEST}*",
            "cwd": "${absDirpath}",
            "env": {
                "ExampleENV1": "You can use variables here too, like ${relPath}",
                "PATH": "${os_env:PATH}${osPathEnvSep}/adding/new/item/to/PATH/env"
            },
            "runTask": {
                "before": [
                    "CMake Build"
                ]
            }
        }
    ],
    "testMate.cpp.debug.configTemplate": {
        "type": "cppdbg",
        "MIMode": "lldb",
        "program": "${exec}",
        "args": "${argsArray}",
        "env": "${envObj}",
        "environment": "${envObjArray}",
        "sourceFileMap": "${sourceFileMapObj}",
        "setupCommands": [
            {
                "description": "Load project LLDB settings for template metaprogramming",
                "text": "command source ${workspaceFolder}/.lldbinit",
                "ignoreFailures": true
            },
            {
                "description": "Limit expression evaluation to prevent hanging",
                "text": "settings set target.expr-prefix-max-function-calls 50",
                "ignoreFailures": true
            },
            {
                "description": "Set timeout for expressions",
                "text": "settings set target.process.utility-expression-timeout 3",
                "ignoreFailures": true
            },
            {
                "description": "Limit children display",
                "text": "settings set target.max-children-count 50",
                "ignoreFailures": true
            }
        ],
        "externalConsole": false,
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "logging": {
            "engineLogging": false
        }
    },
    "cmake.options.statusBarVisibility": "visible",
    "files.associations": {
        "cctype": "cpp",
        "clocale": "cpp",
