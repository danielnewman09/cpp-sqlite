{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Build",
            "type": "shell",
            "command": "conan",
            "args": ["build", ".", "--build=missing"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}